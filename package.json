{
	"name": "vsc-sort-imports-groups",
	"displayName": "vsc-sort-imports-groups",
	"description": "Visual Studio Code Sort Imports by Groups",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onCommand:vsc-sort-imports-groups.helloWorld",
		"onCommand:vsc-sort-imports-groups.sortDocument"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsc-sort-imports-groups.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "vsc-sort-imports-groups.sortDocument",
				"title": "Sort Document Imports"
			}
		],
		"configuration": {
			"title": "VSC Sort Imports Groups configuration",
			"properties": {
				"sort-imports.on-save": {
					"type": "boolean",
					"default": true,
					"description": "Automatically sort imports on save."
				},
				"sort-imports.sort-groups": {
					"title": "Import Sort Group Definitions",
					"description": "Groups description",
					"type": "array",
					"items": {
						"properties": {
							"modules": {
								"description": "modules description",
								"type": "array",
								"items": {
									"type": "string"
								}
							},
							"blank-line": "boolean"
						}
					},
					"default": []
				},
				"sort-imports.languages": {
					"type": "array",
					"default": [
						"javascript",
						"typescript"
					],
					"description": "Languages to sort on save."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"import-sort": "^6.0.0",
		"import-sort-config": "^6.0.0",
		"import-sort-parser-babylon": "^6.0.0",
		"import-sort-parser-typescript": "^6.0.0",
		"rxjs": "^6.4.0"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
