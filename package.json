{
	"name": "vsc-sort-imports-groups",
	"displayName": "vsc-sort-imports-groups",
	"description": "Visual Studio Code Sort Imports by Groups",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onCommand:vsc-sort-imports-groups.sortModules"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsc-sort-imports-groups.sortModules",
				"title": "Sort Document Imports"
			}
		],
		"configuration": {
			"title": "VSC Sort Imports Groups configuration",
			"properties": {
				"sort-imports-groups.on-save": {
					"type": "boolean",
					"default": true,
					"description": "Automatically sort imports on save."
				},
				"sort-imports-groups.sort-groups": {
					"title": "Import Sort Groups",
					"description": "Nested array of strings that exactly match the first word of the module import path. Use . or .. to match relative imports. Module groups will be separated with a blank line.",
					"type": "array",
					"items": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"default": []
				},
				"sort-imports-groups.languages": {
					"type": "array",
					"default": [
						"javascript",
						"typescript"
					],
					"description": "Languages to sort"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"import-sort": "^6.0.0",
		"import-sort-config": "^6.0.0",
		"import-sort-parser-babylon": "^6.0.0",
		"import-sort-parser-typescript": "^6.0.0",
		"rxjs": "^6.4.0"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
